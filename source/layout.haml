%body
  /[if lt IE 7]
    <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
  #fb-root
  -# %script{:src}
  #header.row
    .small-12.columns
      .row
        .small-9.columns
          %h1
            =link_to data.site.owner, '/'
          %h2=data.site.tagline
        .small-3.columns
          %img.avatar.show-for-medium-up{:src => data.site.gravatar}
      .row
        .small-12.medium-offset-9.medium-3.columns
          %ul.social.inline-list
            -data.social.profiles.each do |p|
              %li
                %a{:href => p.url}
                  %i{:class => "fi-social-#{p.name}"}
  #container.row
    #main.small-12.medium-8.columns{:role => "main"}
      = yield
    %aside#filters.small-12.medium-4.columns
      %h2 Recent Articles
      %ul
        -blog.articles[0...10].each do |article|
          %li
            = link_to article.title, article
            %span= article.date.strftime('%b %e')
      %h2 Tags
      %ul
        -blog.tags.each do |tag, articles|
          %li= link_to "#{tag} (#{articles.size})", tag_path(tag)
      %h2 By Year
      %ul
        -blog.articles.group_by {|a| a.date.year }.each do |year, articles|
          %li= link_to "#{year} (#{articles.size})", blog_year_path(year)
      #social
        %a.twitter-share-button{href: "https://twitter.com/share", data: {text: @social_title, related: "BATidwell", count: "none", hashtags: "codecreateconnect"}}
          Tweet
